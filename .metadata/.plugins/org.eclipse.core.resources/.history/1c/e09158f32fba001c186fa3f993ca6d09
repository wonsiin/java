import java.util.Scanner;

public class randum {
	Scanner sc = new Scanner(System.in);
	private int ban;
	
	public randum() {
		print();
		ban = sc.nextInt();
		if (ban == 1) {
			System.out.print("몇번 굴릴것인지 알려주세요. : ");
			ban = sc.nextInt();
		}else if(ban == 2){
			return;
		}else {
			System.out.println("값을 잘못 입력하셧습니다.");
		}
		randum(ban);
	}
	
	private void randum(int ban) {
		if(ban != 0) {
			int[] ga = new int[6];
			for(int i =0; i < 6; ++i) {
				System.out.println(i);
				for(int j = 0; j < i; ++j) {
//					ga[i] = ;
					break;
				}
				
				break;
			}
		}
	}

//	public randum(int ban) {}
	
	public void sta() {
		
	}
