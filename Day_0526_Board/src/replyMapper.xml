<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="net.scit.dao.ReplyMapper">
		<insert id="writeReply" parameterType="Reply">
			INSERT INTO Reply
			(replynum,boardnum,writer,text)
			VALUES
			(reply_seq.nextval,#{boardnum},#{writer},#{text})
		</insert>
		
		<delete id="deleteReply" parameterType="int">
		DELETE
		Reply
		where replynum = #{replynum}
		</delete>
		
		<select id="findById" resultType="Reply" parameterType="int">
		SELECT 
			replynum
		FROM
		Reply
		where replynum = #{replynum}
	</select>
	
	<select id="listReply" resultType="Reply">
		select *
		from Reply
		</select>
		
		<update id= "updateReply"  parameterType="Reply">
	UPDATE Reply
	SET
	text = #{text}
	WHERE
	replynum = #{replynum}
	</update>
</mapper>